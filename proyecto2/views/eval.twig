{% extends 'layout.twig' %}

{% block body %}
    <h1>Lista de los comisiones asignadas</h1>
    <div id="page_principale" class="col-md-8 panel-body">
        
        <table id="detailEvaluation{{ detailGroupe._id }}"  class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th>Modificar notas evaluacion</th>
                    <th>Nombre de la evaluacion</th>
                    <th>Grupo asociado</th>
                    <th>Fecha</th>
                    <th>Descripcion</th>
                    <th>Tipo</th>
                    <th>Nota</th>
                    <th>Commentario</th>
                </tr>
            </thead>
            <tbody>
                {% set i = 0 %}
                {% set indexDetailEval = 0 %}
                {% for detailGroupe in listeGroupe %}
                    {% for listeEval in listeEvaluationParGroupeGeneral[i] %}
                        <tr>
                            <td><a class="list-group-item" href="/modificarevaluacion?idGroupe={{ listeEval.groupes }}&idEvaluation={{ listeEval.evaluations }}">
                                    <span class="couleur_bootstrap">Asignar notas comisiones
                                    </span>
                                </a></td>
                            <td>{{ listeDetailEvalGeneral[indexDetailEval][0].nom }}</td>
                            <td>{{ detailGroupe.nomGroupe }}</td>
                            <td>{{ listeDetailEvalGeneral[indexDetailEval][0].date }}</td>
                            <td>{{ listeDetailEvalGeneral[indexDetailEval][0].description }}</td>
                            <td>{{ listeDetailEvalGeneral[indexDetailEval][0].type }}</td>
                            <td>{{ listeEval.noteGlobale }}</td>
                            <td>{{ listeEval.commentaire }}</td>
                        </tr>

                        {% set indexDetailEval = indexDetailEval+1 %}

                    {% endfor %}

                    {% set i = i+1 %}
                {% endfor %}
            </tbody>
        </table>     
    </div>

{% endblock %}